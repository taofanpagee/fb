{
    "manifest_version": 3,
    "name": "Fanpage Message Checker",
    "version": "1.0",
    "description": "Kiểm tra tin nhắn mới từ các fanpage",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["tabs"]
  }
  