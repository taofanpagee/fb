{
  "manifest_version": 3,
  "name": "Fanpage Message Checker",
  "version": "1.0",
  "description": "Kiểm tra tin nhắn chưa đọc trên các trang Facebook",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://graph.facebook.com; object-src 'self'",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    "api.js",
    "display.js",
    "fanpage_info.js"
  ]
}
